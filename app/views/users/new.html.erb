<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> stopped this from saving</h2>
  </div>

  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user) do |form| %>
  <%= form.label :username, "Enter your username" %>
  <%= form.text_field :username, placeholder: "Enter your username", value: "Hahaha" %></br></br>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@email.com" %></br></br>
  <%= form.label :password, "Enter password" %>
  <%= form.password_field :password %></br></br>
  <%= form.submit %>
<% end %>